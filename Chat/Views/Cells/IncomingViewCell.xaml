<?xml version="1.0" encoding="UTF-8"?>
<cells:BaseMessageViewCell
    xmlns:cells="clr-namespace:Chat.Views.Cells"
    IsEnabled="true"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:partials="clr-namespace:Chat.Views.Partials"
    x:Class="Chat.Views.Cells.IncomingViewCell"
    xmlns:controls="clr-namespace:Chat.Controls"
    xmlns:extensions="clr-namespace:Chat.Extensions"
    xmlns:converter="clr-namespace:Chat.Converters" >

    <Grid VerticalOptions="Start">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
    <Frame
        CornerRadius="5" 
        BackgroundColor="White"
        HasShadow="False"
        VerticalOptions="StartAndExpand"
        HorizontalOptions="Start"
        Margin="10,5,10,5"
        Padding="5">
        <Frame.Resources>
            <converter:IsNullConverter
                x:Key="IsNullConverter" />
            <converter:NameToColorConverter
                x:Key="NameColorConverter" />
        </Frame.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto" />
                <RowDefinition
                    Height="auto" />
                <RowDefinition
                    Height="auto" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding User}"
                TextColor="{Binding User,Converter={StaticResource NameColorConverter}}"
                FontAttributes="Bold" />
            <ContentView
                Grid.Row="1"
                HorizontalOptions="StartAndExpand"
                Grid.Column="0"                
                xmlns:controls="clr-namespace:Chat.Controls"
                xmlns:extensions="clr-namespace:Chat.Extensions">
                    <ContentView.Resources>
                        <converter:IsNullConverter
                        x:Key="IsNullConverter" />
                    <Style
                        TargetType="Label"
                        x:Key="MessageBodyStyle">
                        <Setter
                            Property="FontSize"
                            Value="Medium" />
                        <Setter
                            Property="FontFamily"
                            Value="Lucida Grande" />
                        <Setter
                            Property="TextColor"
                            Value="Black" />
                        <Style.Triggers>
                            <DataTrigger
                                TargetType="Label"
                                Binding="{TemplateBinding BindingContext.OutgoingMessage}"
                                Value="True">
                                <Setter
                                    Property="HorizontalOptions"
                                    Value="End" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <ControlTemplate
                        x:Key="ExpiredMessage">
                        <Label
                            Text="Message Deleted."                   
                            HorizontalOptions="Start"
                            Style="{StaticResource Key=MessageBodyStyle}" />
                    </ControlTemplate>
                    <ControlTemplate x:Key="MaskedMessage">

                            <Image Source="{extensions:ImageResource Chat.Images.stopwatch_250x250.png}"  HeightRequest="100" WidthRequest="{Binding Path=Width, Source={x:Reference TimeStackLayout}}" HorizontalOptions="Center">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                      
                        </ControlTemplate>


                    <ControlTemplate
                        x:Key="NormalMessage">
                        <StackLayout>
                            <Image
                                Grid.Row="0"
                                Source="{TemplateBinding BindingContext.ImageThumbnail}"
                                HeightRequest="100"
                                WidthRequest="100"
                                Aspect="AspectFit"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="Center"
                                Margin="0"
                                IsVisible="False">
                                <Image.Triggers>
                                    <DataTrigger
                                        TargetType="Image"
                                        Binding="{TemplateBinding BindingContext.ImageThumbnail,Converter={StaticResource IsNullConverter}}"
                                        Value="false">
                                        <Setter
                                            Property="IsVisible"
                                            Value="True" />
                                    </DataTrigger>
                                </Image.Triggers>
                                <Image.GestureRecognizers>
                                    <!--TODO make use of command here-->
                                    <TapGestureRecognizer
                                        Tapped="ImageThumbnail_Tapped">
                                    </TapGestureRecognizer>
                                </Image.GestureRecognizers>
                            </Image>
                            <Image
                                Grid.Row="1"
                                Source="{extensions:ImageResource Chat.Images.pdfIcon.png}"
                                WidthRequest="100"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Margin="0"
                                Aspect="AspectFit"
                                IsVisible="False">
                                <Image.Triggers>
                                    <DataTrigger
                                        TargetType="Image"
                                        Binding="{TemplateBinding BindingContext.PDFByte,Converter={StaticResource IsNullConverter}}"
                                        Value="false">
                                        <Setter
                                            Property="IsVisible"
                                            Value="True" />
                                    </DataTrigger>
                                </Image.Triggers>
                                <Image.GestureRecognizers>
                                    <!--TODO make use of command here-->
                                    <TapGestureRecognizer
                                        Tapped="PDFIcon_Tapped">
                                    </TapGestureRecognizer>
                                </Image.GestureRecognizers>
                            </Image>
                            <Label
                                Grid.Row="2"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"                                
                                Style="{StaticResource MessageBodyStyle}"
                                LineBreakMode="WordWrap"
                                IsVisible="false"
                                Text="{TemplateBinding BindingContext.Text}">
                                <Label.Triggers>
                                    <DataTrigger
                                        TargetType="Label"
                                        Binding="{TemplateBinding BindingContext.Text, Converter={StaticResource IsNullConverter}}"
                                        Value="false">
                                        <Setter
                                            Property="IsVisible"
                                            Value="true" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </StackLayout>
                    </ControlTemplate>
                </ContentView.Resources>
                <ContentView.ControlTemplate
                    ControlTemplate="{StaticResource NormalMessage}">
                </ContentView.ControlTemplate>
                <ContentView.Triggers>
                    <MultiTrigger TargetType="ContentView">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding IsExpired}" Value="True"/>
                            <BindingCondition Binding="{Binding IsMasked}" Value="False"/>
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter
                            Property="ControlTemplate"
                            Value="{StaticResource ExpiredMessage}" />
                        </MultiTrigger.Setters>
                    </MultiTrigger>
                    <MultiTrigger TargetType="ContentView">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding IsExpired}" Value="False"/>
                            <BindingCondition Binding="{Binding IsMasked}" Value="False"/>
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter
                            Property="ControlTemplate"
                            Value="{StaticResource NormalMessage}" />
                        </MultiTrigger.Setters>
                    </MultiTrigger>

                    <DataTrigger TargetType="ContentView" Binding="{Binding IsMasked}" Value="True">
                        <Setter
                            Property="ControlTemplate"
                            Value="{StaticResource MaskedMessage}" />
                    </DataTrigger>
                </ContentView.Triggers>
            </ContentView>
            <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" Grid.Row="2" x:Name="TimeStackLayout">
                    <!--Text="{Binding RemainingTimeString}"-->
                    <Label
                    Text="11:11:11"
                    IsVisible="true"
                    HorizontalOptions="Start"
                    FlexLayout.AlignSelf="Start"
                    Margin="0,0,5,0">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding RemainingTimeString,Converter={StaticResource IsNullConverter}}"
                            Value="false"
                            TargetType="Label">
                            <Setter
                                Property="IsVisible"
                                Value="true" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label    
                    HorizontalTextAlignment="End"
                    Text="{Binding SubmittedDate, StringFormat='{}{0:h:mm tt}'}"
                    TextColor="#abb7c0">
                </Label>
            </StackLayout>
        </Grid>
    </Frame>
    </Grid>
</cells:BaseMessageViewCell>