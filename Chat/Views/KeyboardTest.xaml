<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chat.Views.KeyboardTest">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" BackgroundColor="Green" x:Name="listView">
            </ListView>

            <StackLayout Grid.Row="1" Orientation="Horizontal" Spacing="0" Padding="0">
                <Editor BackgroundColor="red" HorizontalOptions="FillAndExpand"></Editor>
                <Button Padding="5" BackgroundColor="Yellow" Text="Send"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>