                        BackgroundColor="Red"
                    FontSize="Small"
                        Text="NO">
                </Button>
                <Button
                    Margin="5"
                      FlexLayout.Basis="20%"
                        TextColor="White"                     
                        BackgroundColor="Red"
                    FontSize="Small"
                        Text="NO">
                </Button>
                <Button
                    Margin="5"
                      FlexLayout.Basis="20%"
                        TextColor="White"                     
                        BackgroundColor="Red"
                    FontSize="Small"
                        Text="NO">
                </Button>
                <Button
                    Margin="5"
                      FlexLayout.Basis="20%"
                        TextColor="White"                     
                        BackgroundColor="Red"
                    FontSize="Small"
                        Text="NO">
                </Button>
                <Button
                    Margin="5"
                      FlexLayout.Basis="20%"
                        TextColor="White"                     
                        BackgroundColor="Red"
                    FontSize="Small"
                        Text="NO">
                </Button>

            </FlexLayout>
                <Label x:Name="ButtonResultLabel" IsVisible="false" Text="You Have Selected YES">
          
            
        </Label>
        </Grid>
        
    </ContentView.Content>
</ContentView>
